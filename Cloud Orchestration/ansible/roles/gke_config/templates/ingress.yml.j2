apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: cloudshirt-ingress
  namespace: {{ namespace }}
  annotations:
    kubernetes.io/ingress.class: gce
spec:
  rules:
    - host: {{ ingress_host }}
      http:
        paths:
          # Web frontend
          - path: /
            pathType: Prefix
            backend:
              service:
                name: eshopwebmvc-svc
                port:
                  number: 80
          # PublicAPI
          - path: /api
            pathType: Prefix
            backend:
              service:
                name: eshoppublicapi-svc
                port:
                  number: 80
