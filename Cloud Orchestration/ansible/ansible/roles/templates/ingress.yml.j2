apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: cloudshirt-ingress
  namespace: {{ namespace }}
  annotations:
    kubernetes.io/ingress.class: gce
    cloud.google.com/neg: '{"ingress": true}'
    cloud.google.com/backend-config: '{"default": "api-backendconfig"}'
spec:
  rules:
    - host: {{ ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: eshopwebmvc-svc
                port:
                  number: 80
          - path: /api
            pathType: Prefix
            backend:
              service:
                name: eshoppublicapi-svc
                port:
                  number: 80
